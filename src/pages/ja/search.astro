---
import BaseLayout from '@layouts/BaseLayout.astro';
import { useTranslations } from '@lib/i18n';

const lang = 'ja';
const t = useTranslations(lang);
---

<BaseLayout
  title={`${t('search.title')} - コマコギャラリー`}
  description={t('search.title')}
  lang={lang}
>
  <div class="container py-16">
    <div class="text-center mb-16">
      <h1 class="text-4xl md:text-5xl font-serif font-bold text-komako-eyes mb-4">
        {t('search.title')}
      </h1>
      <div class="w-16 h-0.5 bg-gradient-to-r from-accent-rose to-accent-pink mx-auto mt-6"></div>
    </div>

    <div class="max-w-2xl mx-auto">
      <div class="mb-8">
        <input
          type="text"
          id="searchInput"
          placeholder={t('search.placeholder')}
          class="w-full px-4 py-3 rounded-xl border border-komako-cozy focus:border-accent-rose focus:ring-2 focus:ring-accent-rose/20 bg-white/80 backdrop-blur-sm transition-all"
        />
      </div>
      
      <div id="searchResults" class="space-y-4">
        <!-- Search results will be populated here -->
      </div>
    </div>
  </div>
</BaseLayout>

