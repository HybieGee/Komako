---
import '@styles/globals.css';
import LangSwitcher from '@components/LangSwitcher.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  lang?: 'en' | 'ja';
  class?: string;
}

const {
  title = 'Komako Gallery',
  description = 'A cozy gallery celebrating Komako, a Scottish Fold born March 26, 2021',
  image = '/og-default.jpg',
  lang = 'en',
  class: className = '',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Komako Gallery" />
    <meta property="og:type" content="website" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    
  </head>
  <body class={className}>
    <header class="sticky top-0 z-40 w-full bg-white/95 backdrop-blur-md border-b border-komako-light/50 shadow-sm">
      <nav class="container flex h-16 items-center justify-between">
        <a href="/" class="flex items-center space-x-3 group">
          <div class="w-10 h-10 bg-gradient-to-br from-accent-pink to-accent-rose rounded-full shadow-md group-hover:shadow-lg transition-all duration-300"></div>
          <div class="flex flex-col">
            <span class="text-xl font-serif font-bold text-komako-eyes tracking-wide">Komako</span>
            <span class="text-xs text-komako-soft font-medium -mt-1">Scottish Fold Gallery</span>
          </div>
        </a>
        
        <div class="flex items-center space-x-6">
          <a href="/" class="nav-link">Gallery</a>
          <a href="/timeline" class="nav-link">Timeline</a>
          <a href="/albums" class="nav-link">Albums</a>
          <a href="/journal" class="nav-link">Journal</a>
          <a href="/about" class="nav-link">About</a>
          <a href="/search" class="nav-link">Search</a>
          <LangSwitcher lang={lang} />
        </div>
      </nav>
    </header>
    
    <main class="min-h-[calc(100vh-8rem)]">
      <slot />
    </main>
    
    <footer class="mt-20 bg-white/60 backdrop-blur-sm border-t border-komako-light/50">
      <div class="container py-8">
        <div class="text-center space-y-4">
          <div class="max-w-md mx-auto">
            <p class="text-komako-soft font-medium mb-2">
              A photographic celebration of Komako
            </p>
            <p class="text-sm text-komako-cozy">
              © 2025 Komako Gallery • Scottish Fold Adventures
            </p>
          </div>
          
          <div class="flex flex-wrap justify-center gap-6">
            <a href="https://x.com/OnlyKomako" class="footer-link">
              Twitter
            </a>
            <a href="/sitemap-index.xml" class="footer-link">
              Sitemap
            </a>
            <a href="https://github.com/HybieGee/Komako" class="footer-link">
              GitHub
            </a>
          </div>
          
          <div class="w-16 h-0.5 bg-gradient-to-r from-accent-rose to-accent-pink mx-auto"></div>
        </div>
      </div>
    </footer>
  </body>
</html>