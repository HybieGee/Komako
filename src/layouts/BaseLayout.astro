---
import '@styles/globals.css';
import ThemeToggle from '@components/ThemeToggle.astro';
import LangSwitcher from '@components/LangSwitcher.astro';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  lang?: 'en' | 'ja';
  class?: string;
}

const {
  title = 'Komako Gallery',
  description = 'A cozy gallery celebrating Komako, a Scottish Fold born March 26, 2021',
  image = '/og-default.jpg',
  lang = 'en',
  class: className = '',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Komako Gallery" />
    <meta property="og:type" content="website" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();
      
      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
  </head>
  <body class={className}>
    <header class="sticky top-0 z-40 w-full bg-white/90 backdrop-blur-md border-b-2 border-komako-light shadow-sm">
      <nav class="container flex h-20 items-center justify-between">
        <a href="/" class="flex items-center space-x-3 group">
          <div class="relative">
            <div class="w-12 h-12 bg-gradient-to-br from-accent-pink to-accent-rose rounded-full flex items-center justify-center shadow-lg group-hover:shadow-xl transition-all duration-300 group-hover:scale-110">
              <span class="text-2xl">🐱</span>
            </div>
            <div class="absolute -top-1 -right-1 w-4 h-4 bg-accent-rose rounded-full animate-pulse"></div>
          </div>
          <div class="flex flex-col">
            <span class="text-2xl font-kawaii font-bold text-komako-eyes tracking-wide">Komako</span>
            <span class="text-xs text-komako-soft font-medium -mt-1">Scottish Fold Princess</span>
          </div>
        </a>
        
        <div class="flex items-center space-x-8">
          <a href="/" class="nav-link">
            <span class="text-lg">🏠</span>
            <span class="hidden sm:inline">Gallery</span>
          </a>
          <a href="/timeline" class="nav-link">
            <span class="text-lg">⏰</span>
            <span class="hidden sm:inline">Timeline</span>
          </a>
          <a href="/albums" class="nav-link">
            <span class="text-lg">📸</span>
            <span class="hidden sm:inline">Albums</span>
          </a>
          <a href="/journal" class="nav-link">
            <span class="text-lg">📖</span>
            <span class="hidden sm:inline">Journal</span>
          </a>
          <a href="/about" class="nav-link">
            <span class="text-lg">💕</span>
            <span class="hidden sm:inline">About</span>
          </a>
          <a href="/search" class="nav-link">
            <span class="text-lg">🔍</span>
          </a>
          <LangSwitcher lang={lang} />
          <ThemeToggle />
        </div>
      </nav>
    </header>
    
    <main class="min-h-[calc(100vh-8rem)]">
      <slot />
    </main>
    
    <footer class="mt-20 bg-white/60 backdrop-blur-sm border-t-2 border-komako-light">
      <div class="container py-12">
        <div class="text-center space-y-6">
          <div class="flex justify-center space-x-2 text-3xl">
            <span class="kawaii-float" style="animation-delay: 0s;">🐾</span>
            <span class="kawaii-float" style="animation-delay: 0.5s;">💕</span>
            <span class="kawaii-float" style="animation-delay: 1s;">🌸</span>
          </div>
          
          <div class="max-w-md mx-auto">
            <p class="text-komako-soft font-kawaii font-medium mb-2">
              Made with endless love for our Scottish Fold princess
            </p>
            <p class="text-sm text-komako-cozy">
              © 2025 Komako's World • Spreading joy one photo at a time 
            </p>
          </div>
          
          <div class="flex flex-wrap justify-center gap-6">
            <a href="https://x.com/OnlyKomako" class="footer-link">
              <span class="mr-1">🐦</span>
              Twitter
            </a>
            <a href="/sitemap-index.xml" class="footer-link">
              <span class="mr-1">🗺️</span>
              Sitemap
            </a>
            <a href="https://github.com/HybieGee/Komako" class="footer-link">
              <span class="mr-1">💻</span>
              GitHub
            </a>
          </div>
          
          <div class="w-32 h-1 bg-gradient-to-r from-accent-rose to-accent-pink mx-auto rounded-full"></div>
        </div>
      </div>
    </footer>
  </body>
</html>