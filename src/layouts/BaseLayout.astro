---
import '@styles/globals.css';
import LangSwitcher from '@components/LangSwitcher.astro';
import { getLangFromUrl, useTranslations, type Language } from '@lib/i18n';

export interface Props {
  title?: string;
  description?: string;
  image?: string;
  lang?: Language;
  class?: string;
}

const lang = getLangFromUrl(Astro.url) || Astro.props.lang || 'en';
const t = useTranslations(lang);

const {
  title = 'Komako Gallery',
  description = 'A cozy gallery celebrating Komako, a Scottish Fold born March 26, 2021',
  image = '/og-default.jpg',
  class: className = '',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
const socialImageURL = new URL(image, Astro.site);
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={socialImageURL} />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:site_name" content="Komako Gallery" />
    <meta property="og:type" content="website" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={socialImageURL} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    
  </head>
  <body class={className}>
    <header class="sticky top-0 z-40 w-full bg-white/95 backdrop-blur-md border-b border-komako-light/50 shadow-sm">
      <nav class="container flex h-16 items-center justify-between">
        <a href="/" class="flex items-center space-x-3 group">
          <img src="/tokenlogo.png" alt="Komako Token Logo" class="w-10 h-10 rounded-full shadow-md group-hover:shadow-lg transition-all duration-300" />
          <div class="flex flex-col">
            <span class="text-xl font-serif font-bold text-komako-eyes tracking-wide">Komako</span>
            <span class="text-xs text-komako-soft font-medium -mt-1">On Solana</span>
          </div>
        </a>
        
        <div class="flex items-center space-x-6">
          <a href={lang === 'ja' ? '/ja' : '/'} class="nav-link">{t('nav.gallery')}</a>
          <a href={lang === 'ja' ? '/ja/timeline' : '/timeline'} class="nav-link">{t('nav.timeline')}</a>
          <a href={lang === 'ja' ? '/ja/albums' : '/albums'} class="nav-link">{t('nav.albums')}</a>
          <a href={lang === 'ja' ? '/ja/journal' : '/journal'} class="nav-link">{t('nav.journal')}</a>
          <a href={lang === 'ja' ? '/ja/about' : '/about'} class="nav-link">{t('nav.about')}</a>
          <a href={lang === 'ja' ? '/ja/search' : '/search'} class="nav-link">{t('nav.search')}</a>
          <LangSwitcher lang={lang} />
        </div>
      </nav>
    </header>
    
    <main class="min-h-[calc(100vh-8rem)]">
      <slot />
    </main>
    
    <footer class="mt-20 bg-white/60 backdrop-blur-sm border-t border-komako-light/50">
      <div class="container py-8">
        <div class="text-center space-y-4">
          <div class="max-w-md mx-auto">
            <p class="text-komako-soft font-medium mb-2">
              {t('footer.tagline')}
            </p>
            <p class="text-sm text-komako-cozy">
              {t('footer.copyright')}
            </p>
          </div>
          
          <div class="flex flex-wrap justify-center gap-6">
            <a href="https://x.com/OnlyKomako" class="footer-link">
              {t('footer.twitter')}
            </a>
            <a href="/sitemap-index.xml" class="footer-link">
              {t('footer.sitemap')}
            </a>
          </div>
          
          <div class="w-16 h-0.5 bg-gradient-to-r from-accent-rose to-accent-pink mx-auto"></div>
        </div>
      </div>
    </footer>
  </body>
</html>