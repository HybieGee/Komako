---

export interface Props {
  title: string;
  image: string;
  alt: string;
  date: string;
  tags?: string[];
  slug: string;
  loading?: 'lazy' | 'eager';
}

const { title, image, alt, date, tags = [], slug, loading = 'lazy' } = Astro.props;

const formattedDate = new Date(date).toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'short',
  day: 'numeric',
});
---

<article class="masonry-item group relative overflow-hidden rounded-lg bg-gray-100 dark:bg-gray-800">
  <a href={`/photo/${slug}`} class="block">
    <div class="relative aspect-auto overflow-hidden">
      <img
        src={image}
        alt={alt}
        loading={loading}
        class="h-auto w-full object-cover transition-transform duration-300 group-hover:scale-105"
        width="400"
        height="300"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent opacity-0 transition-opacity duration-300 group-hover:opacity-100"></div>
    </div>
    <div class="absolute bottom-0 left-0 right-0 translate-y-full p-4 text-white transition-transform duration-300 group-hover:translate-y-0">
      <h3 class="text-lg font-semibold">{title}</h3>
      <time class="text-sm opacity-90">{formattedDate}</time>
      {tags.length > 0 && (
        <div class="mt-2 flex flex-wrap gap-1">
          {tags.map((tag) => (
            <span class="badge bg-white/20 text-xs text-white backdrop-blur">
              {tag}
            </span>
          ))}
        </div>
      )}
    </div>
  </a>
  <button
    class="lightbox-trigger absolute right-2 top-2 rounded-full bg-white/90 p-2 opacity-0 backdrop-blur transition-opacity group-hover:opacity-100 dark:bg-gray-900/90"
    data-image={image}
    data-title={title}
    data-alt={alt}
    aria-label="View in lightbox"
  >
    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
    </svg>
  </button>
</article>