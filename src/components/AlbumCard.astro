---
export interface Props {
  title: string;
  slug: string;
  cover: string;
  summary: string;
  photoCount?: number;
}

const { title, slug, cover, summary, photoCount = 0 } = Astro.props;
---

<article class="card group">
  <a href={`/albums/${slug}`} class="block">
    <div class="relative aspect-video overflow-hidden rounded-lg">
      <img
        src={cover}
        alt={title}
        class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
        loading="lazy"
      />
      <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
      <div class="absolute bottom-3 left-3 text-white">
        <h3 class="text-lg font-semibold">{title}</h3>
        {photoCount > 0 && (
          <span class="text-sm opacity-90">{photoCount} photos</span>
        )}
      </div>
    </div>
    <p class="mt-3 text-sm text-gray-600 dark:text-gray-400">{summary}</p>
  </a>
</article>