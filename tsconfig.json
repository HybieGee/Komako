{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@styles/*": ["src/styles/*"],
      "@content/*": ["content/*"],
      "@config/*": ["src/config/*"]
    },
    "types": ["astro/client"]
  },
  "include": ["src/**/*", "content/**/*"],
  "exclude": ["node_modules", "dist"]
}